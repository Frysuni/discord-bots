{
  "include": ["src/**/*"],
  "exclude": ["node_modules", "test", "build", "**/*spec.ts"],

  "compilerOptions": {
    "module": "commonjs",
    "declaration": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": false,
    "outDir": "./build/dist",
    "baseUrl": ".",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "forceConsistentCasingInFileNames": false,
    "noFallthroughCasesInSwitch": false,
    "resolveJsonModule": true,
    "typeRoots": ["node_modules/@types"],
    "paths": {
      "@logger": ["src/logger"],
      "@env": ["src/system/envConfig"],
      "@client": ["src/system/bot"],
      "@database": ["src/system/database"],
      "@handlers/*": ["src/handlers/*"],
      "@readDir": ["src/utils/readDir"]
    }
  }
}
